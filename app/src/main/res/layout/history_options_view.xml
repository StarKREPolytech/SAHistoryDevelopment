<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/history_edit_relative_layout"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="14sp"
            android:id="@+id/history_edit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="27dp"
            android:text="Редактировать" />

        <ImageView
            android:id="@+id/history_edit_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="27dp"
            app:srcCompat="@drawable/ic_edit_history" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/history_sync_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/history_sync_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="27dp"
            android:text="Синхронизировать"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/history_sync_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="27dp"
            app:srcCompat="@drawable/ic_sort_by_alphabet" />
    </RelativeLayout>

</LinearLayout>