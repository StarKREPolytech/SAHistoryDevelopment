<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="3dp"
        app:cardBackgroundColor="@color/history_card_color">

        <RelativeLayout
            android:id="@+id/history_card_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/history_card_color">

            <TextView
                android:id="@+id/history_card_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="64dp"
                android:layout_marginTop="10dp"
                android:background="@color/history_card_color"
                android:text="Рубцовск - Омск"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/history_card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="64dp"
                android:background="@color/history_card_color"
                android:text="19.05.2018 8 ч 17 мин, 544.8 км"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/history_card_cell_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/history_card_label_image_view"
                android:layout_centerVertical="true"
                android:background="@color/history_card_color"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_history_card_cell_image_view" />

            <ImageView
                android:id="@+id/history_card_tick_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/history_card_cell_image_view"
                android:layout_centerVertical="true"
                android:background="@color/history_card_color"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_history_card_tick_image_view" />

            <ImageView
                android:id="@+id/history_card_repository_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@color/history_card_color"
                app:srcCompat="@drawable/history_local_repository_label_image_view" />

            <ImageView
                android:id="@+id/history_card_label_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@color/history_card_color"
                app:srcCompat="@drawable/ic_history_card_label_image_view" />


            <EditText
                android:id="@+id/history_card_headline_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/history_card_headline"
                android:layout_alignTop="@+id/history_card_headline"
                android:background="@color/history_card_color"
                android:hint="@string/put_new_history_name"
                android:textColorHint="@color/light_gray"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>